<h1 class="text-center">Edit cuisine</h1>

<div class="container mx-auto text-center">
<%= form_for @cuisine do |f| %>
  <div class=“form-row”>
    <%= f.label :name, "cuisine name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class=“form-row”>
    <%= f.submit "Save", class: "btn btn-success mt-2" %>
  </div>
<% end %>
</div>