<h1 class="text-center">All locations</h1>
<div class="row d-flex flex-wrap">
<% @locations.each do |location| %>
  <div class="border col-2 p-2 mx-1 text-center">
    <%= link_to location.name, location_path(location) %>
  <% if current_user.isAdmin %>
    <div class="d-block">
      <%= link_to "Edit", edit_location_path(location), class: "btn btn-warning btn-sm" %>
      <%= link_to "Delete", location_path(location), method: "delete", data:{confirm: "Delete this location?"}, class: "btn btn-danger btn-sm" %>
    </div>
   <% end %>
  </div>
<% end %>
</div>