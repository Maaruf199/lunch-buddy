<h1 class="text-center">Appointments in this area: "<%= @location.name %>"</h1>

<ul>
  <% @location.appointments.reverse.each do |a| %>
    <div class="border col-3 p-2 mx-1 text-center">
        <p><b><%= a.user.firstname %></b> is looking for a lunch buddy!</p>
        <p><%= a.content %></p>
        <p>Date</p>
        <p>Time</p>

        <% a.locations.each do |l| %>
          <span>Location(s): <%= link_to l.name, location_path(l) %></span>
        <% end %>

        <button class="btn btn-success btn-sm">Accept Invitation</button>
    </div>
  <% end %>
</ul>