<h1 class="text-center">Edit location</h1>

<div class="container mx-auto text-center">
<%= form_for @location do |f| %>
  <div class=“form-row”>
    <%= f.label :name, "location name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class=“form-row”>
    <%= f.submit "Save", class: "btn btn-success mt-2" %>
  </div>
<% end %>
</div>