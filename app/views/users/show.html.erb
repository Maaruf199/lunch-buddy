<h1 class="text-center">Your Profile/Appointments</h1>

<%= image_tag(current_user.avatar_thumbnail, :class => "border border-dark rounded-circle") %>
<div class="container">
  <div class="row">
    <div class="col-3">
      <br />
      <h4><p><strong><%= @user.username %></strong></p></h4>
      <h6><p>Firstname: <%= @user.firstname %></p></h6>
      <h6><p>Lastname: <%= @user.lastname %></p></h6>
      <h6><p>Admin Status: <%= @user.isAdmin %></p></h6>
    </div>  
  </div>
</div>

<div class="row d-flex flex-wrap">
  <% @appointments.reverse.each do |a| %>
    <div class="border col-3 p-2 mx-1 text-center">
      <% if current_user.id == a.poster.id %>
      <div class="mx-auto">
        <%= link_to "Edit", edit_user_appointment_path(@user, a), class: "btn btn-sm btn-warning" %>
        <%= link_to "Delete", appointment_path(a), method: "DELETE", data:{ confirm: "Confirm?"}, class: "btn btn-sm btn-danger" %>
      </div>
      <% end %>
      <p><b><%= a.poster.username %></b> is looking for a lunch buddy!</p>
      <p>"<%= a.title %>"</p>
      <p><%= a.status %></p>
      <p>Start: <%= l a.start_time %></p>
      <p>End: <%= l a.end_time %></p>

      <div class="text-center mb-3">
        <% a.locations.each do |l| %>
          <span><%= link_to l.name, location_path(l), class: "badge badge-location" %></span>
        <% end %>
        <% a.cuisines.each do |c| %>
          <span><%= link_to c.name, cuisine_path(c), class: "badge badge-cuisine" %></span>
        <% end %>
        <% a.prices.each do |p| %>
          <span><%= link_to p.name, price_path(p), class: "badge badge-price" %></span>
        <% end %>
      </div>
      
      <div class="mx-auto">
        <%= link_to "Details", appointment_path(a), class: "btn btn-sm btn-info" %>
        <% if current_user.id != a.poster.id && a.status != "booked" %>
        <%= link_to "Accept Invitation", accept_path(a), method: "put", class: "btn btn-sm btn-success" %>
        <%# <button class="btn btn-success btn-sm">Accept Invitation</button> %>
        <% else %>
        <p>Someone already accepted this invitation/You cannot accept your own invitation</p>
        <% end %>  
      </div>
    </div>
  <% end %>
</div>