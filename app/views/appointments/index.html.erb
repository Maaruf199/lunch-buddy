<h1 class="text-center">Available lunch buddies</h1>

<div class="row d-flex flex-wrap">
  <% @appointments.reverse.each do |a| %>
    <div class="border col-3 p-2 mx-1 text-center">
        <p><b><%= a.poster.firstname %></b> is looking for a lunch buddy!</p>
        <p><%= a.content %></p>
        <p><%= a.status %></p>
        <p>Date</p>
        <p>Time</p>

        <% a.locations.each do |l| %>
          <span>Location(s): <%= link_to l.name, location_path(l) %></span>
        <% end %>

        <button class="btn btn-success btn-sm">Accept Invitation</button>
    </div>
  <% end %>
</div>