<h1>Appointments#new</h1>
<p>Find me in app/views/appointments/new.html.erb</p>
<div class=“container”>
<% if @appointment.errors.any? %>
  <%= pluralize(@appointment.errors.count, "error") %>
    <% @appointment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger"> <%= message %> </div>
    <% end %>
<% end %>
<%= form_for [@user, @appointment] do |f| %>
  <div class=“form-row”>
    <%= f.label :content, "Content" %>
    <%= f.text_field :content %>
  </div>
  <div class=“form-row”>
    <%= f.label :status, "Status" %>
    <%= f.text_field :status %>
  </div>
  <div>
    <%= f.collection_select(:price_selects, Price.all, :name, :name, {:prompt => "Choose Price range"},{:multiple => true, :required => true}) %>
  </div>
  <div>
    <%= f.collection_select(:location_selects, Location.all, :name, :name, {:prompt => "Choose Location(s)"},{:multiple => true, :required => true}) %>
  </div>
  <% if @user.isAdmin %>
    <div>
      <%= f.label :price_list %><br />
      <%= f.text_field :price_list %>
    </div>
    <div>
      <%= f.label :location_list %><br />
      <%= f.text_field :location_list %>
    </div>
  <% end %>
  <div class=“form-row”>
    <%= f.submit "Submit" %>
  </div>
<% end %>
</div>
